[mysqld]
port            = 3306
bind-address    = {{mysql_address}}
max_connections = 15
max_user_connections = 15

[mysqldump]
quick
max_allowed_packet = 32M

[mysql]
no-auto-rehash

[isamchk]
key_buffer_size = 8M
sort_buffer_size = 8M

[myisamchk]
key_buffer_size = 8M
sort_buffer_size = 8M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout = 60
